<%= render 'users/user_info', user:current_user %>
<div class="col-md-8 offset-md-1">
  <h2>Books detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
        <td><%= @book.user.name %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %>
          <%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger", method: :delete %>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>