<div class="container">
  <%= render '/users/user_info', user:current_user %>

  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class"table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><% if book.user.get_profile_image.attached? %>
                    <%= image_tag book.user.get_profile_image %>
                  <% else %>
                    <%= image_tag 'default-image.jpg' %>
                  <% end %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
